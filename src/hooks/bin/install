#!/bin/bash

set -e

mkdir $SNAP_COMMON/config
touch $SNAP_COMMON/config/text-file.tmpl                                                                              
echo "'DB_USER = {{ db.user }}'
'DB_PASSWORD = {{ db.password }}'
'DB_HOST = {{ db.host }}'
'DB_PORT = {{ db.port }}'
'DB_DNAME = {{ db.dbname }}'" > $SNAP_COMMON/config/text-file.tmpl
